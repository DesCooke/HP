<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="scenic48RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/scenic48</item>
        <item name="android:indeterminateDrawable">@drawable/scenic_unselected48</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <style name="scenic24RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/scenic24</item>
        <item name="android:indeterminateDrawable">@drawable/scenic_unselected24</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="thrill48RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/thrill48</item>
        <item name="android:indeterminateDrawable">@drawable/thrill_unselected48</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <style name="thrill24RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/thrill24</item>
        <item name="android:indeterminateDrawable">@drawable/thrill_unselected24</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="like48RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/like_48</item>
        <item name="android:indeterminateDrawable">@drawable/like_unselected48</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <style name="like24RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/like_24</item>
        <item name="android:indeterminateDrawable">@drawable/like_unselected24</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="MyTextHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/holidaylistitembox</item>
        <item name="android:layout_marginVertical">10sp</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="MyTextLine">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10sp</item>
        <item name="android:layout_marginVertical">5sp</item>
    </style>

    <style name="MyTextHint">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10sp</item>
        <item name="android:layout_marginVertical">5sp</item>
    </style>

    <style name="MyButton">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10sp</item>
        <item name="android:layout_marginVertical">5sp</item>
    </style>

    <style name="MyRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MyToolButton">
        <item name="android:layout_width">64sp</item>
        <item name="android:layout_height">64sp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/colorDisabled</item>
        <item name="android:background">@android:drawable/alert_light_frame</item>
    </style>

</resources>
