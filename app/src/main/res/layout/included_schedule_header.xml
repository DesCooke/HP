<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageViewSmall"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/holidaylistitembox"
        android:contentDescription="@string/todo"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/imagemissing" />

    <LinearLayout
        android:id="@+id/grpMenuFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:drawable/alert_light_frame"
            android:contentDescription=""
            android:onClick="btnClearImage"
            android:visibility="visible"
            app:srcCompat="@android:drawable/ic_menu_delete"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnShowInfo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:drawable/alert_light_frame"
            android:clickable="false"
            android:onClick="showInfo"
            android:scaleType="centerInside"
            android:tint="@color/colorDisabled"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnShowNotes"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:drawable/alert_light_frame"
            android:onClick="showNotes"
            android:scaleType="centerInside"
            android:tint="@color/colorDisabled"
            app:srcCompat="@drawable/notepad"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grpMenuFile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/btnUrl1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:drawable/alert_light_frame"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/google_maps"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnUrl2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:drawable/alert_light_frame"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/www"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnUrl3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:drawable/alert_light_frame"
            android:contentDescription=""
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/www"
            tools:ignore="ContentDescription" />


    </LinearLayout>

</RelativeLayout>