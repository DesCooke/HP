<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_day_details_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.des.hp.Day.DayDetailsEdit">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_alignParentTop="true"
        android:id="@+id/imageButton2"
        android:onClick="btnClearImage" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="284dp"
            android:layout_height="256dp"
            app:srcCompat="@drawable/imagemissing"
            android:id="@+id/imageViewSmall"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/edtDayName"
            android:layout_alignStart="@+id/edtDayName"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:onClick="pickImage"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="pickDayName">

            <TextView
                android:text="Day Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDayNameCaption"
                android:layout_weight="0.12"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDayName"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="Unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radUnknown"
                android:onClick="handleDayCatOnClick" />

            <RadioButton
                android:text="Easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radEasy"
                android:onClick="handleDayCatOnClick" />

            <RadioButton
                android:text="Moderate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radModerate"
                android:onClick="handleDayCatOnClick" />

            <RadioButton
                android:text="Busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radBusy"
                android:onClick="handleDayCatOnClick" />
        </GridLayout>

        <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOk"
            android:onClick="saveDay"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picturePicked"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>
