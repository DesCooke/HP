                android:textAlignment="textEnd"
                android:textSize="18sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <CheckBox
            android:id="@+id/chkOption5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 5" />

        <LinearLayout
            android:id="@+id/grpBudgetDescription5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBudgetDescriptionCaption5"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/description"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtBudgetDescription5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@android:string/unknownName"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/grpBudgetTotal5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBudgetTotalCaption5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/caption_budget_total"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtBudgetTotal5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/caption_zero"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
