            android:id="@+id/chkOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 3" />

        <LinearLayout
            android:id="@+id/grpBudgetDescription3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
