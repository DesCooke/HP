<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="Bus Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTitle"
        android:textSize="36sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:onClick="btnClearImage"
            app:srcCompat="@android:drawable/ic_menu_delete"/>

        <ImageButton
            android:layout_width="284dp"
            android:layout_height="256dp"
            app:srcCompat="@drawable/imagemissing"
            android:id="@+id/imageViewSmall"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:scaleType="fitXY"
            android:layout_weight="0.78" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/grpStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="Bus Arrives"
                    android:layout_width="match_parent"
                    android:id="@+id/lblCheckin"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="00:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCheckin"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/grpEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:text="Journey Ends"
                    android:layout_width="match_parent"
                    android:id="@+id/lblArrival"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="00:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtArrival"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/grpSchedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSchedNameCaption"
                android:layout_weight="2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSchedName"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/grpBookingRef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Booking Ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBookingRefCaption"
                android:layout_weight="2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBookingRef"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grpMenuFile">

            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/btnShowInfo"
                android:scaleType="centerInside"
                android:clickable="false"
                android:background="@android:drawable/alert_light_frame"
                android:tint="@color/colorDisabled"
                android:onClick="showInfo"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <ImageButton
                app:srcCompat="@drawable/notepad"
                android:id="@+id/btnShowNotes"
                android:background="@android:drawable/alert_light_frame"
                android:tint="@color/colorDisabled"
                android:scaleType="centerInside"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:onClick="showNotes"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picturePicked"
            android:visibility="invisible" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chkCheckinKnown"
            android:visibility="invisible" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chkArrivalKnown"
            android:visibility="invisible" />

        <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:onClick="saveSchedule"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button" />
    </LinearLayout>

</LinearLayout>