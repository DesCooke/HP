<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.des.hp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/budgetListView"
            android:scrollingCache="false"
            android:cacheColorHint="#0000"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="475dp"
            android:layout_alignParentTop="true">

        </android.support.v7.widget.RecyclerView>

        <ImageButton
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/imageButton"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="showBudgetAdd"
            android:elevation="10dp"
            android:background="@android:color/transparent"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/budgetFullCell2"
                android:weightSum="1"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="293dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.73"
                    android:id="@+id/budgetullCell">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.81">

                        <ImageView
                            app:srcCompat="@drawable/sum"
                            android:id="@+id/imgIcon"
                            android:textAlignment="center"
                            android:layout_width="55dp"
                            android:layout_height="50dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="372dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="370dp"
                                android:layout_height="match_parent"
                                android:id="@+id/grpy"
                                android:weightSum="1">

                                <TextView
                                    android:text="Total Budget"
                                    android:layout_width="117dp"
                                    android:id="@+id/budgetDescription"
                                    android:gravity="left|center_vertical"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_height="match_parent" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Total"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/lblBudgetTotal"
                                        android:layout_weight="1"
                                        android:textSize="12sp"
                                        android:layout_gravity="right|center_vertical"
                                        android:gravity="right|center_vertical" />

                                    <TextView
                                        android:text="Total"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/totBudgetTotal"
                                        android:layout_weight="1"
                                        android:textSize="14sp"
                                        android:gravity="right|center_vertical" />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Paid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/lblBudgetPaid"
                                        android:layout_weight="1"
                                        android:textSize="12sp"
                                        android:gravity="right|center_vertical" />

                                    <TextView
                                        android:text="TextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/totBudgetPaid"
                                        android:layout_weight="1"
                                        android:textSize="14sp"
                                        android:gravity="right|center_vertical" />
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Unpaid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/lblBudgetUnpaid"
                                        android:layout_weight="1"
                                        android:textSize="12sp"
                                        android:gravity="right|center_vertical" />

                                    <TextView
                                        android:text="TextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/totBudgetUnpaid"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:srcCompat="@color/colorAccent"
                android:id="@+id/imageView3"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
