<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:id="@+id/budgetItemCell">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/budgetFullCell2"
            android:weightSum="1"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.73"
                android:id="@+id/budgetullCell">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.81">

                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/imagemissing" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="372dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="370dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/grpy"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/budgetDescription"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:gravity="left|center_vertical"
                                android:text="TextView"
                                android:textSize="10sp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblBudgetTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="right|center_vertical"
                                    android:text="Total"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/budgetTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right|center_vertical"
                                    android:text="Total"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblBudgetPaid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right|center_vertical"
                                    android:text="Paid"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/budgetPaid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right|center_vertical"
                                    android:text="TextView"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/lblBudgetUnpaid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right|center_vertical"
                                    android:text="Unpaid"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/budgetUnpaid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right|center_vertical"
                                    android:text="TextView"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView3"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
