<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Ride Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTitle"
        android:textSize="36sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="212dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:layout_alignParentTop="true"
            android:id="@+id/btnClear"
            android:onClick="btnClearImage" />

        <ImageButton
            android:layout_width="284dp"
            android:layout_height="256dp"
            app:srcCompat="@drawable/imagemissing"
            android:id="@+id/imageViewSmall"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:onClick="pickImage"
            android:scaleType="fitXY"
            android:layout_weight="0.25" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="pickSchedName">

            <TextView
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSchedNameCaption"
                android:layout_weight="2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSchedName"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbHeartRating"
            android:indeterminateDrawable="@drawable/like48ratingstyle"
            android:numStars="5"
            android:isIndicator="false"
            android:rating="3.5"
            style="@style/like48RatingBar"
            android:progressDrawable="@drawable/like48ratingstyle"
            android:stepSize="0.1"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:id="@+id/rbScenicRating"
            android:numStars="5"
            android:rating="2.2"
            android:stepSize="0.1"
            android:isIndicator="false"
            style="@style/scenic48RatingBar"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/scenic48ratingstyle"
            android:progressDrawable="@drawable/scenic48ratingstyle"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbThrillRating"
            android:indeterminateDrawable="@drawable/thrill48ratingstyle"
            android:numStars="5"
            android:isIndicator="false"
            android:rating="3.5"
            style="@style/thrill48RatingBar"
            android:progressDrawable="@drawable/thrill48ratingstyle"
            android:stepSize="0.1"/>

        <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOk"
            android:onClick="saveSchedule"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picturePicked"
            android:visibility="invisible" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chkCheckinKnown"
            android:visibility="invisible" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chkDepartureKnown"
            android:visibility="invisible" />

    </LinearLayout>
</LinearLayout>