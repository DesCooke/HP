<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/included_program_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/MyTextHeading"
        android:id="@+id/lblTitle"
        android:text="@string/attraction_details"
        />

    <include
        layout="@layout/included_schedule_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/grpAttractionType"
                    style="@style/MyTextBox" >

                    <TextView
                        android:id="@+id/txtAttractionTypeCaption"
                        android:text="@string/type"
                        style="@style/MyTextHint" />

                    <TextView
                        android:id="@+id/txtAttractionType"
                        style="@style/MyTextLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpSchedName"
                    android:orientation="vertical"
                    style="@style/MyTextBox" >

                    <TextView
                        android:id="@+id/txtSchedNameCaption"
                        style="@style/MyTextHint"
                        android:text="@string/description" />

                    <TextView
                        android:id="@+id/txtSchedName"
                        style="@style/MyTextLine"  />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpBookingReference"
                    style="@style/MyTextBox">

                    <TextView
                        android:id="@+id/txtBookingReferenceCaption"
                        android:text="@string/booking_ref"
                        style="@style/MyTextHint" />

                    <TextView
                        android:id="@+id/txtBookingReference"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpFlightNo"
                    style="@style/MyTextBox">

                    <TextView
                        android:id="@+id/txtFlightNoCaption"
                        android:text="@string/flight_no"
                        style="@style/MyTextHint" />

                    <TextView
                        android:id="@+id/txtFlightNo"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpTerminal"
                    style="@style/MyTextBox">

                    <TextView
                        android:id="@+id/txtTerminalCaption"
                        android:text="@string/terminal"
                        style="@style/MyTextHint"/>

                    <TextView
                        android:id="@+id/txtTerminal"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpCheckIn"
                    style="@style/MyTextBox">

                    <TextView
                        android:id="@+id/txtCheckInCaption"
                        android:text="@string/check_in_time"
                        style="@style/MyTextHint" />

                    <TextView
                        android:id="@+id/txtCheckIn"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpDeparts"
                    style="@style/MyTextBox" >

                    <TextView
                        android:id="@+id/txtDepartsCaption"
                        android:text="@string/departs"
                        style="@style/MyTextHint" />

                    <TextView
                        android:id="@+id/txtDeparts"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpArrival"
                    style="@style/MyTextBox" >

                    <TextView
                        android:id="@+id/txtArrivalCaption"
                        android:text="@string/arrival_time"
                        style="@style/MyTextHint"/>

                    <TextView
                        android:id="@+id/txtArrival"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpReservationTypeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtReservationTypeIdCaption"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:text="@string/reservation_type"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radUnknown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:text="Unknown"
                            android:textAlignment="textStart"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radWalkIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:text="No Need to Book"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radOnTheDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:text="Book on Same Day"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rad180Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:text="Book in Advance"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radBooked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:clickable="false"
                            android:focusable="false"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:text="Booked"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpShow"
                    style="@style/MyTextBox" >

                    <TextView
                        android:id="@+id/txtShowCaption"
                        android:text="Show Time"
                        style="@style/MyTextHint" />

                    <TextView
                        android:id="@+id/txtShow"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpPickUp"
                    style="@style/MyTextBox">

                    <TextView
                        android:id="@+id/txtPickUpCaption"
                        android:text="@string/pickup_time"
                        style="@style/MyTextHint"/>

                    <TextView
                        android:id="@+id/txtPickUp"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpDropOff"
                    style="@style/MyTextBox" >

                    <TextView
                        android:id="@+id/txtDropOffCaption"
                        style="@style/MyTextHint"
                        android:text="@string/drop_off_time" />

                    <TextView
                        android:id="@+id/txtDropOff"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpStartTime"
                    style="@style/MyTextBox">

                    <TextView
                        android:id="@+id/txtStartTimeCaption"
                        android:text="Start Time"
                        style="@style/MyTextHint"/>

                    <TextView
                        android:id="@+id/txtStart"
                        style="@style/MyTextLine"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grpEndTime"
                    style="@style/MyTextBox" >

                    <TextView
                        android:id="@+id/txtEndTimeCaption"
                        android:text="@string/end_time"
                        style="@style/MyTextHint"/>

                    <TextView
                        android:id="@+id/txtEnd"
                        style="@style/MyTextLine" />
                </LinearLayout>

                <RatingBar
                    android:id="@+id/rbHeartRatingView"
                    style="@style/like48RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateDrawable="@drawable/like48ratingstyle"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/like48ratingstyle"
                    android:rating="2.5"
                    android:stepSize="0.1" />

                <RatingBar
                    android:id="@+id/rbScenicRatingView"
                    style="@style/scenic48RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateDrawable="@drawable/scenic48ratingstyle"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/scenic48ratingstyle"
                    android:rating="2.2"
                    android:stepSize="0.1" />

                <RatingBar
                    android:id="@+id/rbThrillRatingView"
                    style="@style/thrill48RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateDrawable="@drawable/thrill48ratingstyle"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/thrill48ratingstyle"
                    android:rating="3.5"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/txtNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/grpMenuFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnShowInfo"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:drawable/alert_light_frame"
                        android:clickable="false"
                        android:contentDescription="@string/todo"
                        android:onClick="showInfo"
                        android:scaleType="centerInside"
                        android:tint="@color/colorDisabled"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/btnShowNotes"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:drawable/alert_light_frame"
                        android:contentDescription="@string/todo"
                        android:onClick="showNotes"
                        android:scaleType="centerInside"
                        android:tint="@color/colorDisabled"
                        app:srcCompat="@drawable/notepad" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/picturePicked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkCheckinKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkDepartsKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkShowKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkPickUpKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkDropOffKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkCheckInKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkArrivalKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkStartKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/chkEndKnown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox"
                    android:visibility="gone" />
            </LinearLayout>


            <include
                layout="@layout/included_schedule_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>